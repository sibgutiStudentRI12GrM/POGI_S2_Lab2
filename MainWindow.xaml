<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="Net chat" Height="200" Width="300">
    <Grid x:Name="Container" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="Btn_OpenClientWindow" Content="Client mode" Margin="5" FontSize="25" Click="Btn_OpenClientWindow_Click"></Button>
        <Button Grid.Row="1" x:Name="Btn_OpenServerWindow" Content="Server mode" Margin="5" FontSize="25" Click="Btn_OpenServerWindow_Click"></Button>
    </Grid>
</Window>
